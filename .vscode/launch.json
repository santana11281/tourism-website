  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng build",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: build",
      "url": "http://localhost:4200/"
    },
        {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/"
    }
  ]
}
